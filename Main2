package main

import "fmt"

func main() {

	//Cálculo exponencial de número.
	var numqualquer int

	fmt.Print("digite um número qualquer:")
	fmt.Scanln(&numqualquer)

	//Potencial do número.
	var Cálculodobro = numqualquer * 2
	var Cálculotriplo = numqualquer * 3
	var Cálculoquadruplo = numqualquer * 4
	fmt.Println("O dobro do número é: ", Cálculodobro, "O triplo do número é: ", Cálculotriplo, "O quadruplo do número é: ", Cálculoquadruplo)
}
